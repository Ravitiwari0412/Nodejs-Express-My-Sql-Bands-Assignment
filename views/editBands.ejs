<!DOCTYPE html>

<header>

  <% include ./layout %>

</header>



<body>

  <div class="row mt-5"></div>

  <div class="col-md-6 m-auto">

    <div class="card card-body">

      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Edit Band</h1>

      <% if (error) { %>

      <div class="alert alert-danger" role="alert">

        <%= error %>

      </div>

      <% } %>

      <form action="/editBands/<%= Bands.id%>" method="POST">

        <div class="form-group"><label for="name">Name</label><input class="form-control" id="name" type="text"

            name="name" placeholder="<%= Bands.name%>" /></div>

        <div class="form-group"><label for="username">Artist</label><input class="form-control" id="artist" type="text"

            name="artist" placeholder="<%= Bands.artist%>" /></div>

        <button class="btn btn-success btn-block" type="submit">Edit</button>

      </form>

      <br />

      <a type="text" class="alert-link" href="/dashboard">Back to List</a>

    </div>

  </div>



</body>



</html>